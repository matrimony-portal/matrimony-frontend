{
  "name": "matrimony-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "repository": "git@github.com:matrimony-portal/matrimony-frontend.git",
  "license": "MIT",
  "author": "Sachin Kumar <sinha1abc@gmail.com>",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "commit": "npx cz",
    "commitlint": "npx commitlint --edit",
    "format": "prettier --write \"src/**/*.{js,jsx,css}\" \"*.html\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css}\" \"*.html\"",
    "lint:css": "stylelint src/**/*.css --fix",
    "lint:css:check": "stylelint src/**/*.css",
    "lint:js": "eslint . --fix",
    "lint:js:check": "eslint .",
    "fix": "npm run format && npm run lint:css && npm run lint:js",
    "check": "npm run format:check && npm run lint:css:check && npm run lint:js:check",
    "prepare": "npx husky"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bootstrap": "^5.3.8",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "vite": "^7.2.4"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.css": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.html": [
      "prettier --write"
    ]
  }
}
